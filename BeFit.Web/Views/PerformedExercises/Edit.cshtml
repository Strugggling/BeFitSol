@model BeFit.Web.Models.DoneExercise
@{
    ViewData["Title"] = "Edit exercise";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group mb-3">
        <label asp-for="SessionId" class="form-label">Training session</label>
        <select asp-for="SessionId" class="form-control" asp-items="new SelectList(ViewBag.Sessions, nameof(BeFit.Web.Models.Training.Id), nameof(BeFit.Web.Models.Training.StartAt))">
        </select>
        <span asp-validation-for="SessionId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExerciseTypeId" class="form-label">Exercise type</label>
        <select asp-for="ExerciseTypeId" class="form-control" asp-items="new SelectList(ViewBag.ExerciseTypes, nameof(BeFit.Web.Models.ExerciseTyp.Id), nameof(BeFit.Web.Models.ExerciseTyp.Name))">
        </select>
        <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Weight" class="form-label">Weight (kg)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Sets" class="form-label">Sets</label>
        <input asp-for="Sets" class="form-control" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Repetitions" class="form-label">Repetitions per set</label>
        <input asp-for="Repetitions" class="form-control" />
        <span asp-validation-for="Repetitions" class="text-danger"></span>
    </div>

    <button type="submit">Save changes</button>
    <a asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
